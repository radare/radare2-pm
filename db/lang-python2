R2PM_BEGIN

R2PM_GIT "https://github.com/radare/radare2-bindings"
R2PM_DESC "[lang-python2] Python2 r2pipe/RLang plugin"

detect_pycfg2() {
	PCS="${PYTHON_CONFIG}
		python-config
		python2-config
		python2.7-config
		python27-config
		python2.6-config
		python26-config
		python2.5-config
		python25-config"
	PYCFG=""
	for pycfg in $PCS; do
		$pycfg --help > /dev/null 2>&1 && \
			$pycfg --libs | grep python2 > /dev/null 2>&1
		if [ $? = 0 ]; then
			PYCFG=$pycfg;
			break
		fi
	done
}

R2PM_INSTALL() {
	detect_pycfg2
	[[ -z $PYCFG ]] && \
		echo "python-config binary for python2 not found," \
		"please specify via PYTHON_CONFIG environment variable" && exit 1
	./configure --prefix="${R2PM_PREFIX}" || exit 1
	PYTHON_CONFIG=${PYCFG} ${MAKE} -C libr/lang/p py || exit 1
	${MAKE} -C libr/lang/p python-install || exit 1
}

R2PM_UNINSTALL() {
	${MAKE} -C libr/lang/p python-uninstall
}

R2PM_END
